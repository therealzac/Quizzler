<div class="admin-nav">
  <div style="  float: left;
    padding: 30px;
    padding-left: 100px;
    font-size: 24px;">App Academy Teacher Portal</div>
</div>
<h3 class="admin-header">Edit this quiz</h3>
<br>

<form action="<%= quiz_url(@quiz) %>" method="post" class='quiz-edit-form'>
  <input type="hidden" name="_method" value="PATCH">

    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">


    <label for="quiz_title">Quiz Title</label>
    <input type="text"
           name="quiz[title]"
           style="border: solid 1px #969696;"
           value="<%= @quiz.title %>">
    <br>
    <label for="quiz_day">Quiz Day:  Ex. "W1D1"</label>
    <input type="text"
           name="quiz[day]"
           style="border: solid 1px #969696;"
           value="<%= @quiz.day %>">
     <br>
     <label for="quiz_max_time">Minutes allowed:   Ex. 60</label>
     <input type="text"
            name="quiz[max_time]"
            style="border: solid 1px #969696;"
            value="<%= @quiz.max_time %>">
      <br>
      <label for="quiz_number_of_questions">Number of questions on the quiz:</label>
      <input type="text"
             name="quiz[number_of_questions]"
             style="border: solid 1px #969696;"
             value="<%= @quiz.number_of_questions %>">

      <br>



    <input type="submit" value="Edit Quiz" id="quiz-edit-submit">
  </form>

</form>
