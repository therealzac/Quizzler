<% @quiz.questions.each do |question| %>
  <div class='quiz-admin-show-individual' style="border: 3px solid black;border-radius:5px;margin:5px;width:500px;padding:10px;">
    <br>
      <% if question.correct_answer_id === nil %>
        <div style="color:red;">No Correct Answer Selected</div>
        <br>
      <% else %>
        Correct answer:

        <%= question.correct_answer.text%>
        <br>
        <br>
      <% end %>

    Question:
    <%= question.text%>
    <br>
    Type:
    <%= question.question_type%>
    <br>
    Explanation:
    <%= question.explanation %>

  <div class="answers" style="margin-left:30px;">
    Answer:

    <form action="/quizzes/<%=question.quiz_id%>/questions/<%=question.id%>" method="post">
        <input type="hidden" name="_method" value="patch">

          <input
            type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">
      <% question.answers.each do |answer| %>
        <br>
        <% if answer.id === question.correct_answer_id %>

          <input type="radio"
                name="question[correct_answer_id]"
                value="<%= answer.id%>"
                style="margin:3px;"
                checked
                onclick=this.form.submit();>
                <%= answer.text%>
                <div style="background-color:red;
                        -moz-border-radius:28px;
                        -webkit-border-radius:28px;
                        border-radius:28px;
                        border:1px solid #18ab29;
                        display:inline-block;
                        cursor:pointer;
                        color:#ffffff;
                        font-family:Arial;
                        font-size:12px;
                        padding:5px 5px;
                        text-decoration:none;
                        text-shadow:0px 1px 0px #2f6627;">
                  <%= link_to "Delete Answer",
                  quiz_question_answer_url({quiz_id: @quiz.id,question_id: question.id  , id: answer.id }), method: :delete %>
                </div>
                <br>

      <% else %>

        <input type="radio"
              name="question[correct_answer_id]"
              value="<%= answer.id%>"
              style="margin:3px;"
              onclick=this.form.submit();>
              <%= answer.text%>
              <div style="background-color:red;
                      -moz-border-radius:28px;
